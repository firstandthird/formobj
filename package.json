{
  "name": "serialize-form",
  "version": "1.0.0",
  "description": "Turns form values into json",
  "main": "lib/serialize-form.js",
  "keywords": [
    "browser",
    "form",
    "json"
  ],
  "scripts": {
    "build": "browserify lib/serialize-form.js -t [ babelify --presets [ es2015 ] ] -o dist/serialize-form.js -s SerializeForm",
    "build:test": "browserify test/serialize-form.test.js -t [ babelify --presets [ es2015 ] ] -o test/dist/test.js",
    "dev": "concurrently -r 'nswatch' 'static-server -p 8000'",
    "lint": "eslint . --ignore-pattern dist"
  },
  "watch": {
    "lib/*.js": [
      "lint",
      "build",
      "build:test"
    ],
    "test/*.js": [
      "lint",
      "build:test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firstandthird/serialize-form.git"
  },
  "author": "First+Third",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/firstandthird/serialize-form/issues"
  },
  "homepage": "https://github.com/firstandthird/serialize-form#readme",
  "dependencies": {},
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "firstandthird"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "concurrently": "^3.1.0",
    "eslint": "^3.4.0",
    "eslint-config-firstandthird": "^3.0.2",
    "eslint-plugin-import": "^1.14.0",
    "nswatch": "^0.2.0",
    "static-server": "^2.0.3",
    "tape": "^4.6.2"
  }
}
